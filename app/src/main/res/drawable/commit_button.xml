<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!--    button点击时的状态-->
    <item android:state_pressed="true" android:drawable="@drawable/buttonclicked"/>
    <item android:state_selected="true" android:drawable="@drawable/buttonclicked"/>
    <item android:state_checked="true" android:drawable="@drawable/buttonclicked"/>

<!--    默认状态下的button-->
    <item android:drawable="@drawable/buttondefault"/>
</selector>