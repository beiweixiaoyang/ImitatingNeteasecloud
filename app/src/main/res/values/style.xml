<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    定义分割线的样式-->
    <style name="split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/split_line_color</item>
        <item name="android:layout_marginLeft">@dimen/margin_size</item>
        <item name="android:layout_marginRight">@dimen/margin_size</item>
    </style>

<!--    定义点击按钮的样式-->
    <style name="click_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/click_item_height</item>
        <item name="android:layout_marginTop">@dimen/margin_size</item>
        <item name="android:layout_marginRight">@dimen/margin_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_size</item>
        <item name="android:background">@drawable/commit_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    定义activity的切换动画-->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
<!--    启动新的activity，新的activity的进入动画-->
        <item name="android:activityOpenEnterAnimation">@anim/open_enter</item>
<!--        启动新的activity，原activity退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/open_exit</item>
<!--        退出activity，当前activity的退出动画-->
        <item name="android:activityCloseExitAnimation">@anim/close_exit</item>
<!--        退出activity，上一个activity进入的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/close_enter</item>
    </style>
</resources>